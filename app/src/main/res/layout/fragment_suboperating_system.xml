<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cloud.heraldic.mea.SuboperatingSystem$PlaceholderFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="155dp"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="20dp"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">
        <ImageButton
            android:src="@drawable/freeclouddesktop_in_smartphone"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:id="@+id/TryNewbie"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:scaleType="fitCenter"
            android:backgroundTint="#00ffffff"
            android:layout_alignParentTop="false"
            android:layout_alignWithParentIfMissing="false"
            android:onClick="OnTryNewbieClick" />
        <ImageButton
            android:src="@drawable/eleet_in_smartphone"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:id="@+id/AccountLogIn"
            android:scaleType="fitCenter"
            android:backgroundTint="#00ffffff"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="OnLoginClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Try MEA Free Edition Login: newbie Password: qwerty"
            android:id="@+id/TryNewbieText"
            android:layout_below="@+id/TryNewbie"
            android:layout_alignRight="@+id/TryNewbie"
            android:layout_alignEnd="@+id/TryNewbie"
            android:clickable="false"
            android:password="false"
            android:phoneNumber="false"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:background="#e1e0ffff"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sign In or Sign up for your personal Power or Eleet Cloud Computer"
            android:id="@+id/textView"
            android:layout_below="@+id/AccountLogIn"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="false"
            android:layout_alignLeft="@+id/AccountLogIn"
            android:layout_alignStart="@+id/AccountLogIn"
            android:textIsSelectable="false"
            android:background="#e1e0ffff"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="1dp" />
    </RelativeLayout>

</RelativeLayout>
